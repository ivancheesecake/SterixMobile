                        android:inputType="number"

                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/nr"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"


                        />
                    <EditText
                        android:hint="0"
                        android:id="@+id/device_nr"
                        android:layout_height="wrap_content"
