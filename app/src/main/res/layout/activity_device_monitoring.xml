        <android.support.percent.PercentRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/device_monitoring_row5"
            android:id="@+id/device_monitoring_row6"
            android:layout_marginBottom="5dp"

            >


            <Button

                android:background="@drawable/curved_borders_blue"
                android:text="@string/photos_notes"
                android:textColor="@color/white"

                android:layout_height="wrap_content"
                android:textAllCaps="false"
                app:layout_widthPercent="31%"
                app:layout_marginRightPercent="2.5%"
                android:id="@+id/device_button_photos_notes"
                android:padding="5dp"
                />

            <Button

                android:id="@+id/device_button_view_summary"
                android:background="@drawable/curved_borders_blue"
                android:text="@string/view_device_summary"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                app:layout_widthPercent="33%"
                app:layout_marginRightPercent="2.5%"

                android:layout_toRightOf="@id/device_button_photos_notes"
                android:padding="5dp"

                />

            <Button
                android:id="@+id/device_save"
                android:background="@drawable/curved_borders_red"
                android:text="@string/save_next_device"
                android:textColor="@color/white"
                app:layout_widthPercent="31%"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_toRightOf="@id/device_button_view_summary"
                android:padding="5dp"


                />

        </android.support.percent.PercentRelativeLayout>

    </RelativeLayout>
</ScrollView>